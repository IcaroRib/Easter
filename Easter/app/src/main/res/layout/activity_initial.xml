<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:orientation="vertical"
    android:weightSum="1">

    <Button
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="Acesse as Categorias"
        android:id="@+id/btCategorias" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="270dp"
        android:layout_height="63dp"
        android:text="Jogos"
        android:id="@+id/btJogos"
        android:layout_gravity="center_horizontal" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="270dp"
        android:layout_height="63dp"
        android:text="Filmes"
        android:id="@+id/btFilmes"
        android:layout_gravity="center_horizontal" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="270dp"
        android:layout_height="63dp"
        android:text="Séries"
        android:id="@+id/bt_series"
        android:layout_gravity="center_horizontal" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="270dp"
        android:layout_height="63dp"
        android:text="Livros"
        android:id="@+id/btLivros"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_gravity="center_horizontal"
        android:autoText="false"
        android:hint="Nome do usuário" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_gravity="center_horizontal"
        android:hint="Senha" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/btLogin"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btLoginGoogle"
            android:layout_toStartOf="@+id/btLoginGoogle"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login com Google+"
            android:id="@+id/btLoginGoogle"
            android:layout_marginRight="36dp"
            android:layout_marginEnd="36dp"
            android:layout_alignTop="@+id/btLogin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>