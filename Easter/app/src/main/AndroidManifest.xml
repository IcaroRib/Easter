    package="bsi.pp_2016_1.easter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".GUI.StartScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".GUI.MediaScreenActivity" />
        <activity android:name=".GUI.EasterEggScreenActivity" />
        <activity android:name=".GUI.SignInActivity"/>
        <activity android:name=".GUI.SignUpActivity"/>
        <activity android:name=".GUI.MediaListScreenActivity"/>
        <activity android:name=".GUI.ProfileActivity" />

    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>
